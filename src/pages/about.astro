---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "About Me"

const identy = {
    firsName: "Sarah",
    country: "Canada",
    occupation: "Technical Writter",
    hobbies: ["photography", "birdwatching", "baseball"],
};


const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Documents"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontWeigth = "bold";
const textCase = "uppercase"


---

<BaseLayout pageTitle={pageTitle}>
    <h1>My Astro Site</h1>
        <h2>{pageTitle}</h2>
        <p>Here are a few facts about me</p>
        <ul>
            <li>My name is {identy.firsName}</li>
            <li>I live in {identy.country}</li>
            {identy.hobbies.length >= 2 &&
                <li>Two of my hobbies are: {identy.hobbies[0]} and {identy.hobbies[1]}</li>
            }
        </ul>
        <p>My skills are</p>
        <ul>
            {skills.map(skill => <li class="skill">{skill}</li>)}
        </ul>
        {happy && <p>I am happy to be learning Astro</p>}
        {finished && <p>I finished this tutorial!</p>}
        {goal === 3 ? <p>My goal is to finish in 3 Days</p> : <p>My goal is not 3 days</p>}
</BaseLayout>
